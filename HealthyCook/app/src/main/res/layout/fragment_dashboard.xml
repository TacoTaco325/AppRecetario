<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnPie"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/pie"
                android:text="pie" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnPancake"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/pancakes"
                android:text="pancakes" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnWaffle"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/waffle"
                android:text="waffles" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnFlan"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/flan"
                android:text="flan" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnCookie"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/cookies"
                android:text="cookies" />

            <Button
                android:id="@+id/button10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnCake"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/cake"
                android:text="cake" />

            <Button
                android:id="@+id/btnCake2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Button"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnMuffin"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:foreground="@drawable/muffin"
                android:text="muffin" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>